<% if user_signed_in? %>
	<div>Hello, <%= current_user.email %></div>
	<p id="notice"><%= notice %></p>

	<tbody>
		<% @categories_months.each do |month, categories| %>
		<div class="parent-date">
			<strong><%= month.strftime('%B, %Y') %></strong>
			<tr>
			<% for category in categories %>
					<p><%= category.name %> on <%= category.category_create_date.to_date.to_s(:long) %></p>
					<% category.products.each do |product| %>
						<li> <%= product.name %> </li>
						<li class="product-price"> <%= product.price %> </li>
					<% end %>
			<% end %>
			</tr>
			<strong class="categories-total">Total: </strong>
		</div>  
		<% end %> 
	</tbody>

	<li>
		<%= link_to("Logout", destroy_user_session_path, method: :delete) %>        
	</li>
<% else %>
	<h3>Please sign in</h3>
	<li>
		<%= link_to("Login", new_user_session_path)  %>  
	</li>
<% end %>